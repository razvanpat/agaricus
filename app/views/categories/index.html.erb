<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Balance</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr id="category-<%= category.id %>">
    <td class="name"><%= category.name %></td>
    <td><%= category.balance %></td>
    <td><%= link_to 'Add Transaction', new_transaction_path(category_id: category.id) %></td>
    <td><%= link_to 'Show', category %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
    <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Category', new_category_path %>
