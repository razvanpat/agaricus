<h1>Listing budgets</h1>

<table>
  <tr>
    <th rowspan="2">Category</th>
    <% @months.each do |m| %>
      <th colspan="3"><%= m.strftime(@month_time_format) %></th>
    <% end %>
  </tr>
  <tr>
    <% @months.each do |m| %>
      <th>Budget</th>
      <th>Spent</th>
      <th>Remaining</th>
    <% end %>
  </tr>

<% Category.all.each do |category| %>
  <tr>
    <td id="category-#{category.id}" class="category"><%= category.name %></td>
    <% @months.each do |m| %>
      <td><%= budget_for_month category.id, m.month, m.year %></td>
      <td><%= spendings_for_month category.id, m.month, m.year %></td>
      <td><%= remaining_for_month category.id, m.month, m.year %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Budget', new_budget_path %>
